---
import BaseLayout from '../layouts/BaseLayout.astro';
import { getCollection } from 'astro:content';
import config from '../../config.json';
import { formatDate } from '../utils/date';

const allArticles = await getCollection('writing');

const sorted = allArticles.sort(
  (a, b) => Date.parse(b.data.date) - Date.parse(a.data.date)
);

const latest = sorted.slice(0, 3);
const featured = sorted.filter((a) => a.data.featured);
---

<BaseLayout title={`${config.site_name} â€” index`} activeNav="index">
  <h1 class="sr-only">{config.site_name}</h1>

  <section class="list-section">
    <h2 class="section-title">latest notes</h2>
    <ul class="clean-list">
      {latest.length > 0 ? latest.map((article) => (
        <li>
          <a href={`/writing/${article.id}`} class="list-link">
            <span class="list-title">{article.data.title}</span>
            <span class="list-meta">{formatDate(article.data.date, { month: 'short', year: '2-digit' })}</span>
          </a>
        </li>
      )) : (
        <li class="empty-item">
          <span class="list-meta" style="font-style: italic;">no writings published yet.</span>
        </li>
      )}
    </ul>
  </section>

  <section class="list-section">
    <h2 class="section-title">selected writings</h2>
    <ul class="clean-list">
      {featured.length > 0 ? featured.map((article) => (
        <li>
          <a href={`/writing/${article.id}`} class="list-link">
            <span class="list-title">{article.data.title}</span>
            <span class="list-meta">{formatDate(article.data.date, { month: 'short', year: '2-digit' })}</span>
          </a>
        </li>
      )) : (
        <li class="empty-item">
          <span class="list-meta" style="font-style: italic;">no featured writings yet.</span>
        </li>
      )}
    </ul>
  </section>
</BaseLayout>

<style>
  .sr-only {
    position: absolute;
    width: 1px;
    height: 1px;
    padding: 0;
    margin: -1px;
    overflow: hidden;
    clip: rect(0, 0, 0, 0);
    white-space: nowrap;
    border: 0;
  }

  .intro-section {
    margin-bottom: var(--space-md);
  }

  @media (min-width: 768px) {
    .intro-section {
      margin-bottom: var(--space-lg);
    }
  }

  .intro-text {
    font-family: var(--font-serif);
    font-size: clamp(1.2rem, 3vw, 1.8rem);
    line-height: 1.4;
    color: var(--text-main);
  }

  :global(.intro-text .highlight) {
    font-style: italic;
    color: var(--text-muted);
  }

  .list-section {
    margin-bottom: var(--space-lg);
  }

  .section-title {
    font-size: 0.85rem;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    color: var(--text-muted);
    margin-bottom: var(--space-sm);
    border-bottom: 1px solid var(--border-color);
    padding-bottom: 0.5rem;
  }

  .clean-list {
    display: flex;
    flex-direction: column;
  }

  .list-link {
    display: flex;
    justify-content: space-between;
    align-items: baseline;
    padding: 0.8rem 0;
    border-bottom: 1px dashed var(--border-color);
  }

  .list-link:hover {
    border-bottom-style: solid;
    border-bottom-color: var(--text-main);
  }

  .list-title {
    font-size: 1rem;
    font-weight: 500;
    line-height: 1.3;
    padding-right: 1rem;
    transition: padding 0.2s ease;
  }

  .list-link:hover .list-title {
    padding-left: 0.5rem;
  }

  .list-meta {
    font-family: monospace;
    font-size: 0.85rem;
    color: var(--text-muted);
    white-space: nowrap;
  }

  .empty-item {
    padding: 0.8rem 0;
  }
</style>
